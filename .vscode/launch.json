  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server Side",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/buildScripts/srcServer.js",
      "stopOnEntry": false,
      "args": [],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "predebug",
      "runtimeExecutable": null,
      "runtimeArgs": [ "--nolazy" ],
      "env": {
          "NODE_ENV": "development"
      },
      "externalConsole": true,
      "sourceMaps": true,
      "outDir": "${workspaceRoot}/.build-dev"
    },
    {
      "name": "Debug Current File",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "stopOnEntry": false,
      "args": [],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "predebug",
      "runtimeExecutable": null,
      "runtimeArgs": [ "--nolazy" ],
      "env": {
          "NODE_ENV": "development"
      },
      "externalConsole": true,
      "sourceMaps": true,
      "outDir": "${workspaceRoot}/.build-dev"
    }
  ]
}
